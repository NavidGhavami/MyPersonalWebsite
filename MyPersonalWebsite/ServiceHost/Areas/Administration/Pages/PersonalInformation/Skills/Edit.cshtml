@model PersonalInfoManagement.Application.Contract.Skill.EditSkill


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش اطلاعات </h4>
</div>



<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SkillName" class="control-label">نام مهارت</label>
                    <input type="text" class="form-control" asp-for="SkillName">
                    <span asp-validation-for="SkillName" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SkillPercent" class="control-label">درصد توانایی</label>
                    <input type="text" class="form-control" asp-for="SkillPercent">
                    <span asp-validation-for="SkillPercent" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ShowOrder" class="control-label">ترتیب نمایش</label>
                    <input type="text" class="form-control" asp-for="ShowOrder">
                    <span asp-validation-for="ShowOrder" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id"  />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش مهارت</button>
    </div>
</form>
