@page
@model ServiceHost.Areas.Administration.Pages.Project.ProjectCategory.IndexModel


@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت گروه پروژه";
}
<div class="content">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["title"]</h4>
            <p class="pull-left">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")" onclick="$('.modal-dialog').css('width','70%')">ایجاد گروه پروژه جدید</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست گروه پروژه ها</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام گروه پروژه</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ProjectCategory)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <a class="btn btn-warning btn-rounded waves-effect waves-light m-b-5"
                                                   href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})" onclick="$('.modal-dialog').css('width','70%')">
                                                    <i class="fa fa-edit"></i> ویرایش
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
