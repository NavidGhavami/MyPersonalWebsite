@page
@model ServiceHost.Areas.Administration.Pages.Project.Projects.EditModel


@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "ایجاد پروژه جدید";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">ویرایش پروژه</h3>
                </div>
                <div class="panel-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Name" class="control-label">نام پروژه</label>
                                    <input type="text" class="form-control" asp-for="Command.Name" onchange="makeSlug('Name', 'Slug')">
                                    <span asp-validation-for="Command.Name" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Customer" class="control-label">مشتری پروژه</label>
                                    <input type="text" class="form-control" asp-for="Command.Customer">
                                    <span asp-validation-for="Command.Customer" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureAlt" class="control-label">Alt</label>
                                    <input type="text" class="form-control" asp-for="Command.PictureAlt">
                                    <span asp-validation-for="Command.PictureAlt" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureTitle" class="control-label">عنوان عکس</label>
                                    <input type="text" class="form-control" asp-for="Command.PictureTitle">
                                    <span asp-validation-for="Command.PictureTitle" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Technology" class="control-label">تکنولوژی</label>
                                    <input type="text" class="form-control" asp-for="Command.Technology">
                                    <span asp-validation-for="Command.Technology" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.CategoryId">گروه پروژه</label>
                                    <select class="form-control" asp-for="Command.CategoryId" asp-items="Model.ProjectCategories">
                                        <option value="0">
                                            گروه پروژه را انتخاب کنید ...
                                        </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                                    <input type="text" class="form-control" asp-for="Command.Slug">
                                    <span asp-validation-for="Command.Slug" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.UrlLink" class="control-label">آدرس سایت</label>
                                    <input type="text" class="form-control" asp-for="Command.UrlLink">
                                    <span asp-validation-for="Command.UrlLink" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Command.FirstPicture" class="control-label">تصویر اصلی</label>
                                    <input type="file" class="form-control" asp-for="Command.FirstPicture">
                                    <span asp-validation-for="Command.FirstPicture" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Command.SecondPicture" class="control-label">تصویر دوم</label>
                                    <input type="file" class="form-control" asp-for="Command.SecondPicture">
                                    <span asp-validation-for="Command.SecondPicture" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Command.ThirdPicture" class="control-label">تصویر سوم</label>
                                    <input type="file" class="form-control" asp-for="Command.ThirdPicture">
                                    <span asp-validation-for="Command.ThirdPicture" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Command.ForthPicture" class="control-label">تصویر چهارم</label>
                                    <input type="file" class="form-control" asp-for="Command.ForthPicture">
                                    <span asp-validation-for="Command.ForthPicture" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.Description" class="control-label">توضیحات</label>
                                    <textarea id="BodyContent" class="form-control" asp-for="Command.Description"></textarea>
                                    <span asp-validation-for="Command.Description" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" class="form-control" asp-for="Command.Id" />
                        <button class="btn btn-warning" type="submit">ویرایش</button>
                        <a class="btn btn-default" asp-page="./Index"> بازگشت</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>

}