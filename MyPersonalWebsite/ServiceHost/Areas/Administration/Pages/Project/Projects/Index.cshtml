@page
@model ServiceHost.Areas.Administration.Pages.Project.Projects.IndexModel


@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "مدیریت  پروژه ها";
}

<div class="content">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["Title"]</h4>
            <p class="pull-left">
                <a class="btn btn-success btn-lg" asp-page="./Create">ایجاد پروژه جدید</a>
            </p>
        </div>
    </div>
    <div class="row" id="ProductCategoriesDiv">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست پروژه ها : (@Model.Projects.Count)</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-hover table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>عکس</th>
                                        <th>نام پروژه</th>
                                        <th>نام گروه پروژه</th>
                                        <th>مشتری پروژه</th>
                                        <th>تاریخ تولید</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Projects)
                                    {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/Pictures/@item.FirstPicture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Category</td>
                                        <td>@item.Customer</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning btn-rounded waves-effect waves-light text-dark m-b-5"
                                              asp-page="./Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>

}
