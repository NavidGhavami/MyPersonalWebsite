@model ServiceManagement.Application.Contract.Services.CreateServices


@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد خدمات جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ServiceName" class="control-label">نام سرویس</label>
                    <input type="text" class="form-control" asp-for="ServiceName">
                    <span asp-validation-for="ServiceName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ServiceLogo" class="control-label">لوگو سرویس</label>
                    <input type="text" class="form-control" asp-for="ServiceLogo">
                    <span asp-validation-for="ServiceLogo" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ServiceDescription" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="ServiceDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="ServiceDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد اطلاعات</button>
    </div>
</form>
