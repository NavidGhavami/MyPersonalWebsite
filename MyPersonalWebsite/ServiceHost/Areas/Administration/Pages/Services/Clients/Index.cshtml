@page
@model ServiceHost.Areas.Administration.Pages.Services.Clients.IndexModel



@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت نظرات مشتریان";
}
<div class="content">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["title"]</h4>
            <p class="pull-left">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")" onclick="$('.modal-dialog').css('width','70%')">ایجاد نظر جدید</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست نظرات مشتریان</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام مشتری</th>
                                        <th>موقعیت شغلی</th>
                                        <th>متن نظر</th>
                                        <th>وضعیت</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ClientsOpinion)
                                    {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ClientName</td>
                                        <td>@item.ClientJob</td>
                                        <td>@item.Description</td>
                                        <td class="text-center">
                                        @if (!item.IsRemoved)
                                        {
                                            <i class="fa fa-check fa-3x text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-remove fa-3x text-danger"></i>
                                        }
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning btn-rounded waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})" onclick="$('.modal-dialog').css('width','70%')">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (!item.IsRemoved)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                                   class="btn btn-danger btn-rounded waves-effect waves-light m-b-5">عدم نمایش</a>
                                            }
                                            else
                                            {
                                                <a asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                                   class="btn btn-success btn-rounded waves-effect waves-light m-b-5">نمایش</a>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}