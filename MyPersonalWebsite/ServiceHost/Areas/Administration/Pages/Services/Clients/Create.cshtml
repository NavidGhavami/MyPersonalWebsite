@model ServiceManagement.Application.Contract.ClientsOpinion.CreateClientsOpinion



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد نظر جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ClientName" class="control-label">نام مشتری</label>
                    <input type="text" class="form-control" asp-for="ClientName">
                    <span asp-validation-for="ClientName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ClientJob" class="control-label">موقعیت شغلی</label>
                    <input type="text" class="form-control" asp-for="ClientJob">
                    <span asp-validation-for="ClientJob" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Description" class="control-label">توضیحات</label>
                <textarea class="form-control autogrow" asp-for="Description"
                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                <span asp-validation-for="Description" class="error"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد نظر</button>
    </div>
</form>
