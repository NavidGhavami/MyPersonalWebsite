@page
@model ServiceHost.Pages.MyResumeModel

@{
    ViewData["Title"] = "رزومه من";
}

<div id="lonon-main">

    <div class="lonon-about">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <span class="heading-meta style-1">رزومه</span>
                    <h2 class="lonon-heading animate-box" data-animate-effect="fadeInLeft">درباره من</h2>
                </div>
            </div>
            @await  Component.InvokeAsync("BasicInfo")
            <div class="row">
                <div class="lonon-about-contact-wrap">
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-page-handler="DownloadPersianResume" class="btn btn-success md md-file-download">دانلود رزومه فارسی</a>
                        </div>
                        <div class="col-md-4">
                            <a asp-page-handler="DownloadEnglishResume" class="btn btn-warning">دانلود رزومه انگلیسی</a>
                        </div>
                        <div class="col-md-4">
                            <a asp-page-handler="DownloadRecommendationLetter" class="btn btn-primary">دانلود نامه های پیشنهادی شرکت ها</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="divider1"></div>

@await Component.InvokeAsync("JobExperience")

    <div class="divider1"></div>

@await Component.InvokeAsync("EducationExperience")

<div class="divider1"></div>

@await Component.InvokeAsync("Skills")

    <div id="lonon-footer2">
        <div class="lonon-narrow-content">
            <div class="row">
                <div class="col-md-4 animate-box" data-animate-effect="fadeInLeft">
                    <p class="lonon-lead">
                        استفاده از مطالب این سایت فقط برای مقاصد غیرتجاری و با ذکر منبع
                        بلامانع است. کلیه حقوق این سایت متعلق به نوید قوامی می‌باشد.
                    </p>
                </div>
                <div class="col-md-4 animate-box" data-animate-effect="fadeInLeft">
                    <h2 class="text-center">
                    </h2>
                </div>
                <div class="col-md-4 animate-box" data-animate-effect="fadeInLeft">
                    <a asp-page="/MyProjects">
                        <h2 class="text-center">
                            نمونه کارها و پروژه های  <strong class="text-warning">من</strong>  را مشاهده فرمایید؟!
                        </h2>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>